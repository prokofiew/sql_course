    ADD

    ALTER TABLE companies 
    ADD COLUMN phone VARCHAR(15);
     
    ALTER TABLE companies
    ADD COLUMN employee_count INT NOT NULL DEFAULT 1;


    DROP

    ALTER TABLE companies
        DROP COLUMN employee_count,
        DROP COLUMN phone;

    RENAME TABLE AND COLUMN

